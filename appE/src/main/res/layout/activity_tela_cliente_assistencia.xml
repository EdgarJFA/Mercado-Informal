<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela_cliente_assistencia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.rademotions.mercadoinformal.visao.TelaClienteAssistencia"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_chat_2"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assistência ao Cliente"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorDarkBlue"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_margin="10dp"
                android:background="@drawable/background10"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se ainda tem duvida, busque apoio com nossos administradores! Comece uma nova converça ao primir o botão Assistência."
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="17sp"
                android:textColor="@color/colorDarkBlue"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assistencia"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:background="@drawable/botaoestilodark"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
