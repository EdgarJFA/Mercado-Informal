<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_painel_vendedor_pagamentos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center"
    tools:context="com.rademotions.mercadoinformal.visao.PainelVendedorPagamentos"
    android:orientation="vertical">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_local_atm_black_24dp"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="50dp"
        android:tint="@color/colorBitterSweetDark"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-70dp"
        android:layout_marginBottom="40dp"
        android:text="Pagamentos"
        android:textSize="18sp"
        android:textColor="@color/colorBitterSweetDark"/>


    <Button
        android:id="@+id/bt_registrar_Modalidade_Pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoestilobitter"
        android:drawableLeft="@drawable/ic_plus_one_black_24dp"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:text="nova Modalidade"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/bt_Visualizar_Modalidades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoestilobitter"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:text="Modalidades Registratas"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/bt_admPag_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoestilobitter"
        android:drawableLeft="@drawable/ic_reply_all_black_24dp"
        android:drawablePadding="10dp"
        android:layout_gravity="center"
        android:text="Retornar ao painel"
        android:layout_marginBottom="20dp"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Como deseja receber o seu dinheiro?"
        android:textSize="18sp"
        android:textColor="@color/colorBitterSweetDark"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_mcel_mesh"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_vodacom_mpesa"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_movitel_emola"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_bim"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_bci"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</LinearLayout>
