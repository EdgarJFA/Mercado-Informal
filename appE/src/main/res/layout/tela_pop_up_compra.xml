<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="@drawable/botaoestilooco"
    android:backgroundTint="@color/colorWhite"
    android:padding="1dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/txtPopUp_fecharCompra"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_highlight_off_black_24dp"
        android:layout_gravity="end"
        android:layout_margin="5dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione o canal bancario a sua escolha para efetivar a compra"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/botaoestiloocodark"
        android:textColor="@color/colorDarkBlue"
        android:id="@+id/textView3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/bt_Canal_mKesh"
            android:src="@drawable/img_mcel_mesh"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/img_vodacom_mpesa"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_movitel_emola"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/img_bim"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_bci"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btPopUp_continuarCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/botaoestilobitter"
        android:backgroundTint="@color/colorDarkBlue"
        android:text="Continuar"
        android:enabled="false"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorWhite"/>


</LinearLayout>