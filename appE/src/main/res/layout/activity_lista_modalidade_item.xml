<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/botaoestiloocodark"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:paddingLeft="7dp"
            android:tint="@color/colorBitterSweetDark"
            android:src="@drawable/ic_local_atm_black_24dp"/>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@color/colorBitterSweetDark"
            android:rotation="25"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="25dp"
            android:id="@+id/box_Info_usuario">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome da Modalidade"
                android:textSize="20sp"
                android:textColor="@color/colorDarkBlue"
                android:id="@+id/TextView_nome_Modalidade_adaptador"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero Registrado"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBitterSweetDark"
                android:id="@+id/TextView_Numero_Modalidade_adaptador"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data de Registro"
                android:textSize="10sp"
                android:textColor="@color/colorBitterSweetDark"
                android:id="@+id/TextView_data_Modalidade_adaptador"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
