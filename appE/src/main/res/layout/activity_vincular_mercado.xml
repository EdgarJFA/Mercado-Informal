<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vincular_mercado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    tools:context="com.rademotions.mercadoinformal.visao.Vincular_Mercado"
    android:orientation="vertical"
    android:background="#fff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vincular vendedor a Mercado"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/colorFlowerDark"
        android:layout_margin="15dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorBitterSweetDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercado *"
                    android:textColor="@color/colorBitterSweetDark"
                    android:textSize="18sp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_selecionar_mercado"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/botaoestiloocodark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documento *"
                    android:textColor="@color/colorBitterSweetDark"
                    android:textSize="18sp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/spinner_tipoDocumento_vendedor"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/botaoestiloocodark"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Nº de Identificação *"
                    android:layout_marginBottom="10sp"
                    android:ems="10"
                    android:background="@drawable/botaoestiloocodark"
                    android:id="@+id/editText_docm_vendedor" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Licença Comercial *"
                    android:layout_marginBottom="5sp"
                    android:ems="10"
                    android:background="@drawable/botaoestiloocodark"
                    android:id="@+id/editText_licenca_vendedor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atividade *"
                    android:textColor="@color/colorBitterSweetDark"
                    android:textSize="18sp"/>


                <CheckBox
                    android:text="Vender Produtos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:id="@+id/checkBox_categoria_vendedor" />

                <CheckBox
                    android:text="Prestar Serviços"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:id="@+id/checkBox_categoria_prestador" />

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorBitterSweetDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sexo *"
                    android:textColor="@color/colorBitterSweetDark"
                    android:textSize="18sp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:id="@+id/radioGrupo_sexo">

                    <RadioButton
                        android:text="Femenino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton_sexo_femenino"
                        android:layout_weight="1" />

                    <RadioButton
                        android:text="Masculino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton_sexo_masculino"
                        android:layout_weight="1" />
                </RadioGroup>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@color/colorBitterSweetDark"/>

                <Button
                    android:id="@+id/button_registrar_vendedor_vinculado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botaoestilobitter"
                    android:drawableRight="@drawable/ic_send_black_24dp"
                    android:drawablePadding="10dp"
                    android:layout_gravity="center"
                    android:text="Registrar"
                    android:layout_marginBottom="20dp"
                    android:textColor="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
