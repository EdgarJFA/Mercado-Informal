<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cartao_visita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    tools:context="com.rademotions.mercadoinformal.visao.CartaoVisitaActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="50dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/pontos_slide"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"></LinearLayout>

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/botaoestilobitter"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_anterior_cartaoVisita"
        android:visibility="invisible" />

    <Button
        android:text="PrÃ³ximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botaoestilobitter"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_proximo_cartaoVisita" />

    <Button
        android:text="Pular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/botaoestilooco"
        android:textColor="#fff"
        android:drawableRight="@drawable/ic_close_black_24dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button_pular_cartaoVisita" />

</RelativeLayout>
