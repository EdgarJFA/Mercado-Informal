<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context="com.rademotions.mercadoinformal.visao.LoginActivity"
    android:orientation="vertical"
    android:background="#fff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="35dp"
                android:background="@color/colorDarkBlue">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MERCADO INFORMAL"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:text="Este aplicativo é a sua nova forma de ir ao mercado sem mesmo sair do seu sofá. Veja todos os produtos disponiveis no mercado mais próximo de si."
                    android:layout_marginTop="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_Ler_mais"
                        android:text="Ler Mais"
                        android:background="@drawable/botaoestilobitter"
                        android:textColor="#fff"
                        android:layout_margin="10dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_visitar"
                        android:text="Visitar"
                        android:background="@drawable/botaoestilooco"
                        android:textColor="#fff"
                        android:layout_margin="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#fff"
                android:paddingTop="30dp">

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_email_telefone"
                    android:hint="Telefone ou Email"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:textSize="20sp"/>

                <EditText
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_senha"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                    android:drawablePadding="10dp"/>

                <Button
                    android:layout_marginTop="20dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botaoestilobitter"
                    android:text="Entrar"
                    android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
                    android:textColor="#fff"
                    android:id="@+id/button_entrar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Novo por aqui? Cadastre - se. "
                    android:layout_margin="10dp"
                    android:textColor="@color/colorBitterSweet"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/text_View_btCadastro_cliente"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
